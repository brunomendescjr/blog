<div class="container-fluid">
    <p>
      <strong >Title:</strong>
      <%= @article.title %>
    </p>

    <p>
      <strong>Text:</strong>
      <%= @article.text %>
    </p>

    <div style="background-color: pink;">
          <h2>Comments</h2>
    </div>
    <%= render @article.comments %>

    <h2>Add a comment:</h2>
    <%= render 'comments/form'%>

    <p>
      <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', articles_path %>
    </p>
</div>
